{
  "name": "nextjs-fullstack-boilerplate",
  "packageManager": "pnpm@9.12.2",
  "engines": {
    "node": "20.x"
  },
  "scripts": {
    "build": "next build",
    "dev": "dotenv -e .env.local -- prisma migrate dev && next dev -p 80",
    "format:prettier": "prettier --write \"**/*.{js,ts,jsx,tsx,cjs,mjs,cts,mts,json}\"",
    "format:prisma": "prisma format",
    "lint": "run-p lint:*",
    "lint:eslint": "eslint .",
    "lint:secret": "secretlint \"**/*\"",
    "postinstall": "dotenv -e .env.development.local -- prisma generate",
    "start": "node server.js",
    "test": "jest"
  },
  "dependencies": {
    "@nextui-org/react": "2.4.8",
    "@prisma/client": "5.21.1",
    "framer-motion": "11.11.10",
    "next": "15.0.1",
    "react": "18.3.1",
    "react-dom": "18.3.1"
  },
  "devDependencies": {
    "@eslint/eslintrc": "3.1.0",
    "@eslint/js": "9.13.0",
    "@secretlint/secretlint-rule-preset-recommend": "9.0.0",
    "@testing-library/dom": "10.4.0",
    "@testing-library/jest-dom": "6.6.2",
    "@testing-library/react": "16.0.1",
    "@types/jest": "29.5.14",
    "@types/node": "20.17.2",
    "@types/react": "18.3.12",
    "@types/react-dom": "18.3.1",
    "autoprefixer": "10.4.20",
    "dotenv-cli": "7.4.2",
    "eslint": "8.57.1",
    "eslint-config-next": "15.0.1",
    "eslint-config-prettier": "9.1.0",
    "globals": "15.11.0",
    "jest": "29.7.0",
    "jest-environment-jsdom": "29.7.0",
    "lefthook": "1.8.1",
    "npm-run-all2": "7.0.1",
    "postcss": "8.4.47",
    "prettier": "3.3.3",
    "prisma": "5.21.1",
    "secretlint": "9.0.0",
    "supabase": "1.207.9",
    "tailwindcss": "3.4.14",
    "ts-jest": "29.2.5",
    "typescript": "5.6.3",
    "typescript-eslint": "8.12.1"
  }
}
