{
  "name": "nextjs-fullstack-boilerplate",
  "packageManager": "pnpm@9.15.0",
  "engines": {
    "node": "20.x"
  },
  "scripts": {
    "build": "next build",
    "dev": "dotenv -e .env.local -- prisma migrate dev && next dev",
    "format": "run-p format:*",
    "format:prettier": "prettier --write \"**/*.{js,ts,jsx,tsx,cjs,mjs,cts,mts,json}\"",
    "format:prisma": "prisma format",
    "lint": "run-p lint:*",
    "lint:eslint": "eslint .",
    "lint:secret": "secretlint \"**/*\"",
    "postinstall": "dotenv -e .env.development.local -- prisma generate",
    "start": "node server.js",
    "test": "jest",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@nextui-org/react": "2.6.8",
    "@prisma/client": "6.0.1",
    "@supabase/ssr": "0.5.2",
    "@supabase/supabase-js": "2.47.3",
    "framer-motion": "11.13.5",
    "next": "15.1.0",
    "react": "19.0.0",
    "react-dom": "19.0.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "3.2.0",
    "@eslint/js": "9.16.0",
    "@iconify/react": "5.1.0",
    "@secretlint/secretlint-rule-preset-recommend": "9.0.0",
    "@testing-library/dom": "10.4.0",
    "@testing-library/jest-dom": "6.6.3",
    "@testing-library/react": "16.1.0",
    "@types/jest": "29.5.14",
    "@types/node": "22.10.1",
    "@types/react": "19.0.1",
    "@types/react-dom": "19.0.2",
    "autoprefixer": "10.4.20",
    "dotenv-cli": "7.4.4",
    "eslint": "9.16.0",
    "eslint-config-next": "15.1.0",
    "eslint-config-prettier": "9.1.0",
    "globals": "15.13.0",
    "jest": "29.7.0",
    "jest-environment-jsdom": "29.7.0",
    "lefthook": "1.9.0",
    "npm-run-all2": "7.0.1",
    "postcss": "8.4.49",
    "prettier": "3.4.2",
    "prisma": "6.0.1",
    "secretlint": "9.0.0",
    "supabase": "2.0.0",
    "tailwindcss": "3.4.16",
    "ts-jest": "29.2.5",
    "typescript": "5.7.2",
    "typescript-eslint": "8.17.0"
  },
  "pnpm": {
    "overrides": {
      "react": "19.0.0",
      "react-dom": "19.0.0"
    }
  }
}
